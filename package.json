{
  "name": "pirateborg",
  "version": "1.0.0",
  "type": "module",
  "description": "Official system for PIRATE BORG on Foundry VTT.",
  "main": "./module/pirateborg.js",
  "scripts": {
    "build:clean": "node ./utils/packs.mjs package clean",
    "build:db": "node ./utils/packs.mjs package pack",
    "build:json": "node ./utils/packs.mjs package unpack",
    "lint": "eslint --fix ./module lang/",
    "precommit": "npm run validate",
    "prepare": "husky",
    "pretty": "prettier --write .",
    "pretty-check": "prettier --check .",
    "sass": "sass ./scss:./css",
    "validate": "npm-run-all pretty-check lint",
    "watch": "sass --watch ./scss:./css",
    "pack": "npm run build:db && zip -r ./system.zip CHANGELOG.md LICENSE.MB3PL LICENSE.MIT how-to-use-this-system.md README.md system.json template.json css/ fonts/ icons/ lang/ module/ packs/ templates/ tokens/ ui/"
  },
  "repository": "https://github.com/Limithron-Foundry-VTT/pirate-borg-system",
  "author": "maqloner",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@foundryvtt/foundryvtt-cli": "3.0.2",
    "@typhonjs-fvtt/eslint-config-foundry.js": "^0.8.0",
    "eslint": "9.39.1",
    "eslint-plugin-i18n-json": "4.0.1",
    "eslint-plugin-import": "^2.32.0",
    "fancy-log": "^2.0.0",
    "globals": "^16.5.0",
    "husky": "9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "3.7.4",
    "sass": "^1.96.0",
    "yargs": "18.0.0"
  }
}
